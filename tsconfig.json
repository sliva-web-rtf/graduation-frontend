{
    "compilerOptions": {
        "skipLibCheck": true,
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "ESNext",
        "jsx": "react-jsx",
        "allowJs": true,
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": ["vite.config.ts", "./src/**/*.ts", "./src/**/*.tsx"],
    "exclude": ["node_modules", "**/node_modules/*"]
}
